<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
    <link href='http://fonts.googleapis.com/css?family=OFL+Sorts+Mill+Goudy+TT:regular,italic' rel='stylesheet' type='text/css'>

    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>Dan Carroll | Home</title>
    <link rel="alternate" type="application/rss+xml" title="Latest blog entries" href="/feeds/latest/" />
    <link rel="stylesheet" href="{{ media_url('css/aal.css') }}" type="text/css" media="screen" charset="utf-8" />
    <link rel="stylesheet" href="{{ media_url('css/base.css') }}" type="text/css" media="screen" charset="utf-8" />
    <meta name="description" content="Personal blog of Dan Carroll, a developer based in Cambridge. Topics include C#, Python, Django, and gaming." />

    {% block extrahead %}{% endblock %}

    <!-- Google analytics code -->
    {% if site.config.mode == "production" -%}
        {% include "ga.j2" %}
    {%- endif %}
</head>
<body>

    <div id="header-container">    
        <div class="top group" id="header">
            <header>
                <a href="/">dan carroll</a>
            </header>
            
            <nav>
                <a href="/blog/">blog</a>
                <a href="/projects/">projects</a>
                <a href="/about/">about</a>
                <a href="/feeds/latest/">feed</a>
            </nav>
        </div>
    </div>

    <div id="main-wrap">      
        <div id="content">
            {% block content %}{% endblock %}
        </div>

        <div class="footer">
            <p>&copy; Copyright 2013 by {{ author.name }}</p>
            <p>:-)</p>
        </div>
    </div>

</body>
</html>
