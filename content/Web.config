<?xml version="1.0"?>

<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <rule name="Canonical Hostname">
                    <match url="(.*)" />
                    <conditions logicalGrouping="MatchAll" trackAllCaptures="false">
                        <add input="{HTTP_HOST}" pattern="^dancarroll.org$" negate="true" />
                    </conditions>
                    <action type="Redirect" url="http://dancarroll.org/{R:1}" redirectType="Permanent" />
                </rule>
                <rule name="Convert to lower case" stopProcessing="true">  
                    <match url=".*[A-Z].*" ignoreCase="false" />  
                    <action type="Redirect" url="{ToLower:{R:0}}" redirectType="Permanent" />  
	    	</rule>
		<rule name="Default document - html" stopProcessing="true">
			<match url="(.*)index.html" />
			<action type="Redirect" url="{R:1}" redirectType="Permanent" />
		</rule>
		<rule name="Default document - xml" stopProcessing="true">
			<match url="(.*)index.xml" />
			<action type="Redirect" url="{R:1}" redirectType="Permanent" />
		</rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>

